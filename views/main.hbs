<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6 mt-5">
            <h1 class="text-center">Vista de productos</h1>
            <table class="table table-striped table-hover mt-5 text-center">
                <thead>
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">Title</th>
                        <th scope="col">Price</th>
                        <th scope="col">Thumbnail</th>
                    </tr>
                </thead>
                <tbody>
                    {{#if items}}
                        {{#each items}}
                        <tr style="vertical-align: middle;">
                            <th scope="row">{{id}}</th>
                            <td>{{title}}</td>
                            <td>{{price}}</td>
                            <td><img src="{{thumbnail}}" alt="{{title}}" height="100"></td>
                        </tr>
                        {{/each}}
                   {{else}}
                    <tr>
                        <td colspan="4" class="text-center">No hay productos</td>
                    </tr>
                    {{/if}}
                </tbody>
            </table>
        </div>
    </div>
</div>